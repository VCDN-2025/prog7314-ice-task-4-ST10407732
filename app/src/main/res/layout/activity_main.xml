<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Add ID to the CardView wrapper -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRandomMealButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="45dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRandomMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ² Random Meal"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:elevation="0dp"/>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imgMeal"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardRandomMealButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtMealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgMeal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollInstructions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/txtMealName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions will appear here."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
